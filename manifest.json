{
    "manifest_version": 3,
    "name": "A Bot",
    "version": "1.3",
    "description": "Marks attendance on Canvas LMS",
    "icons": {
      "48": "/assets/icon.png"
    },
    "action":{
      "default_title":"A Bot",
      "default_popup":"index.html"
    },
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["https://rollcall.instructure.com/sections/*"],
        "js": ["/scripts/jquery.js","/scripts/content_script.js"]
      },
      {
        "matches": ["https://moringa.instructure.com/courses/*/users"],
        "js": ["/scripts/browser-polyfill.min.js", "/scripts/at-risk.js"]
      }
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "{9a89f1f5-9c16-4a2f-8c29-f54cfe8edfd8}"
      }
    }
  }
  